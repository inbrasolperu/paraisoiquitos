<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="model_form_view_inherit">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <!--HEADER-->
            <field name="arch" type="xml">
                <xpath expr="//field[@name='image_1920']" position="before">
                    <div class="oe_button_box" name="button_box">
                        <field name="alert_warning_vat" invisible="1" />
                        <div class="alert alert-warning" role="alert" attrs="{'invisible': [('alert_warning_vat', '=', False)]}">
                            <span>
                                <strong>NO CONNECTION OR THE DATA DOES NOT EXIST, PLEASE REGISTER THE DATA MANUALLY.</strong>
                            </span>
                        </div>
                    </div>
                </xpath>
                <div>
                    <div class="o_group" style="margin-bottom: -15%;">
                        <table class="o_group o_inner_group o_group_col_6">
                            <tbody>
                                <tr>
                                    <td class="o_td_label">
                                        <label for="status" string="Status" />
                                    </td>
                                    <td style="width: 100%;">
                                        <field name="status" placeholder="status" attrs="{'invisible':[('is_company','=',False)]}" readonly="1" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="o_group o_inner_group o_group_col_6">
                            <tbody>
                                <tr>
                                    <td class="o_td_label">
                                        <label for="condition" string="Condition" />
                                    </td>
                                    <td style="width: 100%;">
                                        <field name="condition" placeholder="Condition" attrs="{'invisible':[('is_company','=',False)]}" readonly="1" />
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <xpath expr="//page[3]" position="after">
                    <page string="SUNAT">
                         <group>
                             <group string="Information">
                                 <field name="condition" readonly="1"/>
                                 <field name="status" readonly="1"/>
                             </group>                      
                         </group>    
                     </page>
                 </xpath>     
            </field>
        </record>
    </data>
</odoo>